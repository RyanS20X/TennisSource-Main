@model IEnumerable<TennisSource.Models.TennisTournament>

@{
    ViewData["Title"] = "Index";
}

<h1 class="border-bottom border-white text-white pb-2 border-3">Upcoming Tournaments</h1>


<div>
    <div class="d-flex flex-column p-1">
@foreach (var item in Model) {
        <div class="card mt-2 px-0 py-4 cardgradient border-5 rounded-5 border-white text-white" style="width: 100%; max-height: 300px">
                <h1 class="ms-4 ps-2 fw-bolder text-uppercase">@Html.DisplayFor(modelItem => item.Title)</h1>
                <ul class="nav justify-content-evenly">
                    <li class="nav-item">
                        <p>Type: @Html.DisplayFor(modelItem => item.TypeId)</p>
                        <p class="fw-bold">Location: @Html.DisplayFor(modelItem => item.Location)</p>
                        <h3>@Html.DisplayFor(modelItem => item.Date)</h3>
                        <ul class="nav pt-1">
                            <li class="nav-item p-1">
                                <a asp-action="Edit" asp-route-id="@item.TennisTournamentId" class="link-light">Edit</a>
                            </li>
                            <li class="nav-item p-1"><p>|</p></li>
                            <li class="nav-item p-1">
                                <a asp-action="Delete" asp-route-id="@item.TennisTournamentId" class="link-light">Delete</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item" style="max-width: 40%;">
                        <p class="fst-italic fw-bold clamp-6 pb-0 mb-0" style="max-height: inherit;">@Html.DisplayFor(modelItem => item.Description)</p>
                        <a asp-action="Details" asp-route-id="@item.TennisTournamentId" class="mt-0 pt-0 lh-1 link-light" style="font-size: 12px;">(Read more)</a>
                    </li>
                    
                    <li class="nav-item text-center pb-3">
                        <h3 class="">Tournament Organizer:</h3>
                        <h2>@Html.DisplayFor(modelItem => item.Organizer)</h2>
                    </li>

                </ul>

                

                
                 
            
        </div>
}
    </div>
</div>
